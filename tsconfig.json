{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": ["ES6"],
    "rootDir": "src/",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "build/",
    "noImplicitAny": true,
    "allowJs": false,
    "strict": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./build"]
}
